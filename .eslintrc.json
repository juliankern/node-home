{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "globals": {
        "$": true,
        "$$": true,
        "__caller_function": true,
        "__caller_line": true,
        "__stack": true
    },
    "extends": "airbnb",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-use-before-define": "off",
        "max-len": ["error", 120],
        "no-underscore-dangle": ["error", { "allowAfterThis": true }],
        "class-methods-use-this": "off",
        "no-plusplus": "off"
    }
}
